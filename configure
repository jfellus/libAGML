#!/bin/bash

COMMAND=$1
if [[ "$COMMAND" == "clean" ]]; then
    rm -rf build
    rm -rf bin
    rm -rf lib
    rm -f Makfile
    exit
fi

mkdir -p build || exit 2
cd build || exit 2
cmake .. || exit 2
cd ..


cat << EOF > Makefile
# Makefile automatically generated by configure

MAKE=make -s

all:
	@\$(MAKE) -C build

clean:
	@\$(MAKE) -C build clean

.PHONY: all clean

EOF

echo
echo "Run make to build programs"
echo

